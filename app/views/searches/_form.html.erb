<div class="d-flex justify-content-center align-items-center mb-2">
  <% if user_signed_in? %>
    <div class="form-body">
      <%= form_with url: search_path, method: :get, local: true, class: "d-flex justify-content-center align-items-center" do |f| %>
        <%= f.text_field :content, class: "form-control form-control-sm mx-1" %>
        <%= f.select :model, options_for_select(search_target), {}, class: "form-control form-control-sm mx-1" %>
        <%= f.select :method, options_for_select(search_conditions), {}, class: "form-control form-control-sm mx-1" %>
        <%= f.submit "Search", class: "btn btn-info btn-sm mx-1" %>
      <% end %>
    </div>
  <% end %>
</div>