<section class="mb-4">
  <h2>Books</h2>
  <% if books.all.count == 0 %>
    <p class="text-center">There are no books posted. Share your thoughts on the books you have read!</p>
  <% else %>
    <table class='table table-hover table-inverse'>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "books/row", collection: books, as: :book %>
      </tbody>
    </table>
  <% end %>
</section>