<div class="">
  <%= render "book_comments/list", book: book %>

  <div class="form-body">
    <%= form_with model: [book, book_comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Comment", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
