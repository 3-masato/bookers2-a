<div class="">
  <div class="book-comment-list">
    <% book.book_comments.each do |c| %>
      <div class="book-comment-item">
        <div class="book-comment-item-icon">
          <%= image_tag c.user.get_profile_image, size:"48x48" %>
        </div>
        <div class="book-comment-item-body">
          <div class="book-comment-item-info">
            <div class="font-weight-bold mr-2"><%= c.user.name %></div>
            <small><time class="text-black-50" datetime="<% c.created_at %>"><%= c.created_at.strftime("%Y/%m/%d") %></time></small>
          </div>
          <div class="book-comment-item-comment"><%= c.comment %></div>
        </div>
        <div class="book-comment-item-action">
          <% if c.user == current_user %>
            <%= link_to book_book_comment_path(book, c), method: :delete, "data-confirm" => "Are you sure?", class: "btn btn-outline-danger btn-sm" do %>
              <div class=""><i class="fa-solid fa-trash-can"></i> Destroy</div>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="form-body">
    <%= form_with model: [book, book_comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Comment", class: "btn btn-info" %>
      </div>
    <% end %>
  </div>
</div>
