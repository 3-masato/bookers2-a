<section>
  <h2><%= @user.name %>さんとのチャット</h2>

  <%= link_to "ユーザー一覧に戻る", users_path %>

  <div>
    <% if @messages.present? %>
      <% @messages.each do |msg| %>
        <div class="d-flex">
          <div class="font-weight-bold"><%= msg.user.name %></div>
          <div class="pl-2"><%= msg.message %></div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-body">
    <%= form_with model: @message, local: true do |f| %>
      <div class="form-group">
        <%= f.text_field :message, placeholder: "Enter message here", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.hidden_field :room_id, value: @room.id %>
      </div>

      <div class="form-group">
        <%= f.submit "Send", class: "btn btn-success btn-sm" %>
      </div>
    <% end %>
  </div>
</section>