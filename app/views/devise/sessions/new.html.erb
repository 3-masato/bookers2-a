<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>Log in</h2>

    <div class="form-body">
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "font-weight-bold" %><br />
          <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %>
      </div>

        <div class="form-group">
          <%= f.label :password, class: "font-weight-bold" %><br />
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
      </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group form-check">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-info" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
